<%= stylesheet_link_tag "/css/mirador-combined.css" %>
<%= stylesheet_link_tag "/css/mirador-local.css" %>
<p id="notice"><%= notice %></p>

<%= link_to '<<< Back to Resource Selection List', metadata_path %>

<div id="viewer"></div>

<script type="text/javascript">

    $(function() {
      Mirador({
        "id": "viewer",
        "layout": "1x1",
        "data": [
          { "manifestUri": "http://localhost:3000/metadata/<%= @metadatum.objid %>.json", "location": "Harvard University"}, // Harvard Scroll
          { "manifestUri": "http://oculus-dev.harvardx.harvard.edu/manifests/drs:18259372", "location": "other"},
          { "manifestUri": "http://manifests.ydc2.yale.edu/manifest/BeineckeMS10", "location": "Yale University"}
        ],
        "logosLocation" : "/images/logos/",
        "windowObjects": [
          {
        	"loadedManifest": "http://localhost:3000/metadata/<%= @metadatum.objid %>.json",
        	"viewType" : "ImageView",
        	"canvasID": "http://localhost:3000/metadata/<%= @metadatum.objid %>/canvas/1",
        	//"bottomPanel" : false,
          "layoutOptions": {
            "close": false,
            "slotRight": false,
            "slotLeft": false,
            "slotAbove": false,
            "slotBelow": false
          }
        	//"availableViews" : ['ThumbnailsView', 'ImageView', 'BookView']
        	//"overlay" : false
          }
        ]
      });
    });
  </script>

<script src="/mirador.js"></script>
